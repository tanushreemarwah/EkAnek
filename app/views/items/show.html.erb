	<div class="container">
		<h2><%= @item.title %></h2>
		<h3><%= @item.description%></h3>
		<p>File Extension is: 
			<%= @item.avatar.file.extension %></p>
			
			<p>File url:	<%= @item.avatar.path %></p>
			
			<p>TinyURL: <%= ShortURL.shorten( @item.avatar.path , :tinyurl) %></p>

		<% if user_signed_in? %>

			<% if @item.user_id == current_user.id %>
					<%= link_to "Back", root_path %> |
					<%= link_to "Edit", edit_item_path(@item)%> |
					<%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: "Are you sure?" } %>
			<%end%>
		
		<% end %>


	</div>
